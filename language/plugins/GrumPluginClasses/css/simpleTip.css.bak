

/*
 * tips
 */

.cSimpleTipContent {
  border: none;
  font-family: sans-serif;
  font-size: 11px;
  max-width: 200px;
  padding: 4px;
  min-height: 15px;
}
.cSimpleTipShadow {
  background-color: #000000;
  display: block;
  height: 100%;
  margin-left: 2px;
  margin-top: 2px;
  opacity: 0.4;
  position: absolute;
  width: 100%;
  z-index: -1;
}
.cSimpleTipShadow, .cSimpleTipContent {
  -moz-border-radius:4px;
  -webkit-border-radius:4px;
  -khtml-border-radius:4px;
  border-radius:4px;
}

.cSimpleTipContent span.title {
  font-weight:bold;
}
.cSimpleTipContent ul, .cSimpleTipContent ol {
  margin:4px;
  padding-left:15px;
}

.cSimpleTipContent img {
  margin:8px;
}

.cSimpleTipContent span.navDesc {
  text-align:center;
  display:block;
}

.cSimpleTipArrow {
  background-repeat:no-repeat;
  width:12px;
  height:12px;
  position:absolute;
}

.cSimpleTipArrowDown {
  background-position:0px 0px;
}
.cSimpleTipArrowUp {
  background-position:-12px 0px;
}
.cSimpleTipArrowRight {
  background-position:-12px -12px;
}
.cSimpleTipArrowLeft {
  background-position:0px -12px;
}


.cSimpleTipContent span.navAction {
  font-weight:bold;
}
.cSimpleTipContent span.navTitle {
  font-style:italic;
}

