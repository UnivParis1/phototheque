/* for categorySelector plugin */
.ui-inputTreeList {
  cursor:default;
  min-height:17px;
  padding:0;
}
div.ui-inputTreeList:focus {
  outline:none;
}

.ui-inputTreeList-nfo {
  margin:3px;
  padding-left:3px;
  float:right;
  font-size:8px;
  max-height:8px;
}

.ui-inputTreeList-list {
  margin-top:-1px;
  cursor:default;
  font-size:14px;
  font-family:sans-serif;
  z-index:9999;
}

.ui-inputTreeList-item {
  min-height:15px;
}

div.ui-inputTreeList-multiple div.ui-inputTreeList-check,
div.ui-inputTreeList-multiple div.ui-inputTreeList-name,
li.ui-inputTreeList-expandable-item div.ui-inputTreeList-expand-item,
li.ui-inputTreeList-collapsable-item div.ui-inputTreeList-expand-item {
   display:inline-block;
}
.ui-inputTreeList-expandable-item,
.ui-inputTreeList-collapsable-item {
  background: none no-repeat scroll 0px 0px;
}

.ui-inputTreeList-check {
  background:none no-repeat scroll 0 0 transparent;
  display:inline-block;
  height:13px;
  width:17px;
}


/* --- */
.ui-inputTreeList-name ul { list-style:none; margin:0; padding:0; }
.ui-inputTreeList-name li.ui-inputTreeList-selected-cat {
  -moz-border-radius:3px;
  -webkit-border-radius:3px;
  -khtml-border-radius:3px;
  border-radius:3px;
  float:left;
  margin-bottom:1px;
  margin-right:1px;
  padding:0 4px;
  cursor:default;
}
.ui-inputTreeList-name ul li.ui-inputTreeList-selected-cat span { cursor:pointer; }
.ui-inputTreeList-name li span {
  font-family:sans;
  font-size:80%;
  font-weight:bold;
  padding:0 3px;
  position:relative;
  top:-1px;
}
.ui-inputTreeList-arrow {
  border-style:solid;
  border-width:1px;
  cursor:pointer;
  font-weight:bold;
  width:14px;
  margin-top:1px;
  height:14px;
  text-align:center;
  display:inline-block;
}
.ui-inputTreeList-name {
  padding: 1px;
  display: inline-block;
}
div.ui-inputTreeList-list div.ui-inputTreeList-name {
  position: relative;
  top: -2px;
}

