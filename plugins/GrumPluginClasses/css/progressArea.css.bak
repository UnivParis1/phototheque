/* for progressArea plugin */

.ui-progressArea-globalText,
.ui-progressArea-detailText {
  display:none;
}

.ui-progressArea-globalBar,
.ui-progressArea-detailBar {
  width:100%;
  height:14px;
  display:none;
}

.ui-progressArea-globalBarProgress,
.ui-progressArea-detailBarProgress {
  width:0px;
  position:absolute;
}

.ui-progressArea-globalBarText,
.ui-progressArea-detailBarText {
  width:0px;
  text-align:center;
  position:absolute;
}

.ui-progressArea-workInProgress {
  width:100%;
  height:30px;
  margin-top:8px;
}

/* dialog box */
.ui-dialogProgressArea {
  text-align:justify;
}
.ui-dialogProgressArea div.ui-dialog-titlebar {
  cursor:move;
}
.ui-dialogProgressArea div.ui-dialog-buttonpane {
  text-align:left;
}
.ui-dialogProgressArea div.ui-dialog-buttonpane button {
  border-style:solid;
  border-width:1px;
  cursor:pointer;
  font-weight:bold;
  margin-top:1px;
  text-align:center;
  visibility:hidden;
}
.ui-dialogProgressArea div.ui-dialog-content {
  margin:0px;
  padding:8px;
}
.ui-dialogProgressArea a.ui-dialog-titlebar-close {
  display:none;
}

