<div class="titrePage">
  <h2>Statistics</h2>
</div>

<span>{'Howto'|translate}</span>

<form action="" method="post" name="form">
  <p style="margin-bottom:5px;">{'statistics_admin_description'|translate}</p>
  <p style="margin:0;"><textarea name="statistics_content" id="statistics_content" rows="10" cols="80">{$statisticsCONTENT}</textarea></p>
  <ul style="width:400px;margin:20px auto !important;list-style-type:none;">
    <li><label><input type="checkbox" name="stat_header" {$STATITICS_HEADER} /> {'stat_header'|translate}</label></li>
    <li><label><input type="checkbox" name="stat_tail" {$STATISTICS_TAIL} /> {'stat_tail'|translate}<label></li>
    <li><label><input type="checkbox" name="stat_admin" {$STATISTICS_ADMIN} />&nbsp;{'stat_admin'|translate}<label></li>
    <li><label><input type="checkbox" name="stat_guest" {$STATISTICS_GUEST} />&nbsp;{'stat_guest'|translate}<label></li>
  </ul>
  <p><input class="submit" type="submit" name="submit" value="{'Submit'|translate}"/></p>
</form>

