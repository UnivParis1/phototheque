/* jQuery tablesorter instructions */
/* ******************************* */

table.tablesorter tbody tr.normal-row td {
  background: #111111;  
  color: #666666;
}
table.tablesorter tbody tr.alt-row td {
  background: #222222;
  color: #666666;
}