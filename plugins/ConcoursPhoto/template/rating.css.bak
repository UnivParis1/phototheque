
/* - - - - - RATINGS */
.ratingConcours {
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 150px;
  height: 15px;
  padding: 5px 10px;
  margin: auto;
  border-radius: 30px;
  background: #f2f2f2;
  display: block;
  overflow: hidden;
  
  box-shadow: 0 1px #CCC,
              0 5px #DDD,
              0 9px 6px -3px #999;
  
  unicode-bidi: bidi-override;
  direction: ltr;
}
.ratingConcours:not(:checked) > input {
  display: none;
}

/* - - - - - RATE */
#rateConcours {
  top: -50px;
}
#rateConcours:not(:checked) > label {
  cursor:pointer;
  float: right;
  width: 20px;
  height: 5px;
  display: block;
  
  color: rgba(0, 135, 211, .4);
  line-height: 20px;
  text-align: center;
}
#rateConcours:not(:checked) > label:hover,
#rateConcours:not(:checked) > label:hover ~ label {
  color: rgba(0, 135, 211, .6);
}
#rateConcours > input:checked + label:hover,
#rateConcours > input:checked + label:hover ~ label,
#rateConcours > input:checked ~ label:hover,
#rateConcours > input:checked ~ label:hover ~ label,
#rateConcours > label:hover ~ input:checked ~ label {
  color: rgba(0, 135, 211, .8);
}
#rateConcours > input:checked ~ label {
  color: rgb(0, 135, 211);
}
